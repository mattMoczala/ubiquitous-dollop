extends layout

block content
    .container
      .row
        .col-md-6.offset-md-3
          h2 Logowanie
          form(action='/users/login', method='post')
            .form-group
              label(for='username') Nazwa użytkownika
              input#username.form-control(type='text', name='username', required)
            .form-group
              label(for='password') Hasło
              input#password.form-control(type='password', name='password', required)
            button.btn.btn-primary(type='submit') Zaloguj się
        a.link-primary(href='/signup') Zarejestruj się
